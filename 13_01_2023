#include<iostream>
#include<stdio.h>

using namespace std;

int main(){
	float x;
	int y;
	x=3.2;
	y=5;
	printf("numero = %f, numero2=%d",x,y); //cout %d es un entero
	
	return 0;
}

#include<iostream>
#include<stdio.h>

using namespace std;

int main(){
	int x;
	int *px;
	x=3;
	px=&x;
	printf("x=%d\n",x);// \n es un cambio de linea
	printf("px=%x",px);
	
	return 0;
}



#include<iostream>
#include<stdio.h>

using namespace std;

int main(){
	char letra;
	letra='A';
	printf("letra = %c", letra);
	
	
	return 0;
}


#include<iostream>
#include<stdio.h>

using namespace std;

int main(){
	char letra;
	char *p_letra;
	letra='A';
	p_letra=&letra;
	printf("letra = %c\n", letra);
	printf("pletra=%x", p_letra);
	
	return 0;
}



#include<iostream>
#include<stdio.h>

using namespace std;

int main(){
	char palabra[]="pepe";
	printf("palabra %s",palabra);
	
	return 0;
}


